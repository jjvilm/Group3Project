<!doctype html>
 <link rel="stylesheet" href="/stylesheets/userlist.css" />

<html lang="en">
<%- include('../partials/headfile'); %>
  
  <body>
    <%- include('../partials/navbar'); %>

    <div class="container">
        <a href="/adminDashboard/userCreate" class="btn btn-primary">Create</a>
        <table class="table table-bordered" id="userTable">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% for (var i=0; i<users.length; i++)  {%>
                <tr>
                    <td><%=users[i].firstName%></td>
                    <td><%=users[i].lastName%></td>
                    <td><%=users[i].email%></td>
                    <td><%=users[i].role%></td>
                    <td>
                        <a href="/adminDashboard/userUpdate?id=<%=users[i]._id%>" class="btn btn-primary">Update</a>
                        <a href="/adminDashboard/userDelete?id=<%=users[i]._id%>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>

    <%- include('../partials/scripts'); %>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#userTable').DataTable();
        })
    </script>

  </body>
</html>
